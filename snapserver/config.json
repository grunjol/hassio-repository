{
  "name": "Snapcast Server",
  "version": "0.1.16",
  "slug": "snapserver",
  "description": "Snapcast server with librespot support",
  "url": "https://github.com/grunjol/addon-snapserver",
  "startup": "system",
  "boot": "auto",
  "host_network": true,
  "init": false,
  "map": [
    "share:rw"
  ],
  "options": {
    "stream": {
      "sources": [
        "pipe:///share/snapfifo/librespot?name=SpotifyConnect&sampleformat=44100:16:2",
        "pipe:///share/snapfifo/mopidy?name=Mopidy&sampleformat=44100:16:2"
      ],
      "buffer": "1000",
      "codec": "flac",
      "send_to_muted": "false",
      "sampleformat": "48000:16:2"
    },
    "http": {
      "enabled": "true",
      "doc_root": "/usr/share/snapweb"
    },
    "tcp": {
      "enabled": "true"
    },
    "logging": {
      "filter": "*:info"
    },
    "server": {
      "threads": "-1",
      "datadir": "/share/snapcast/"
    }
  },
  "schema": {
    "stream": {
      "sources": [
        "str"
      ],
      "buffer": "int",
      "codec": "str",
      "send_to_muted": "str",
      "sampleformat": "str"
    },
    "http": {
      "enabled": "str",
      "doc_root": "str"
    },
    "tcp": {
      "enabled": "str"
    },
    "logging": {
      "filter": "str?"
    },
    "server": {
      "threads": "int",
      "datadir": "str"
    }
  },
  "ports": {
    "1704/tcp": 1704,
    "1705/tcp": 1705,
    "1780/tcp": 1780
  },
  "ports_description": {
    "1704/tcp": "Snapcast Server",
    "1705/tcp": "Snapcast Control",
    "1780/tcp": "SnapWeb interface"
  },
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "image": "grunjol/snapserver-{arch}"
}
